# Turn off the annoying startup message
startup_message off

# Start with 1 instead of 0
bind c screen 1
bind ^c screen 1
bind 0 select 10

# Start a screen right away
screen -t home 1

# Awesome status bar
hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B}%m-%d %{W} %c %{g}]'

